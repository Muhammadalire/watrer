generator client {
  provider = "prisma-client-js"
}

// In your schema.prisma
datasource db {
  provider = "postgresql" // <--- Change this from "sqlite"
  url      = env("DATABASE_URL")
}
model User {
  id                String   @id @default(cuid())
  email             String   @unique
  name              String?
  notificationEmail String?  // Email for notifications
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Relations
  hydrationRecords  HydrationRecord[]
  achievements      UserAchievement[]
  rewards           Reward[]
  
  @@map("users")
}

model HydrationRecord {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  glasses   Int      @default(0)
  target    Int      @default(8)
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
  @@map("hydration_records")
}

model Achievement {
  id          String @id @default(cuid())
  name        String
  description String
  icon        String
  requirement Int    // Days or glasses required
  type        String // 'streak' or 'total'
  
  // Relations
  userAchievements UserAchievement[]
  
  @@map("achievements")
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlocked      Boolean  @default(false)
  unlockedAt    DateTime?
  createdAt     DateTime @default(now())
  
  // Relations
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  
  @@unique([userId, achievementId])
  @@map("user_achievements")
}

model Reward {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String
  type        String   // 'video', 'message', 'surprise'
  requirement Int      // Days or glasses required
  unlocked    Boolean  @default(false)
  unlockedAt  DateTime?
  claimed     Boolean  @default(false)
  claimedAt   DateTime?
  createdAt   DateTime @default(now())
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("rewards")
}

model EmailLog {
  id        String   @id @default(cuid())
  userId    String
  email     String
  subject   String
  content   String
  sent      Boolean  @default(false)
  sentAt    DateTime?
  error     String?
  createdAt DateTime @default(now())
  
  @@map("email_logs")
}